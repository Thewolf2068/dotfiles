{
    "height": 30,
    "spacing": 4,
    "margin-top": 5,
    "margin-left":5,
    "margin-right":5,
    "margin-bottom":5,
    "reload_style_on_change": true,

    "layer": "top",
    {{- if eq .device "home-pc" }}
    "output": "DP-1",
    {{- end }}
    "modules-left": ["custom/arch", "hyprland/workspaces", "custom/media",],
    "modules-center": ["hyprland/window"],
    "modules-right": ["custom/headsetVolume", "tray", "custom/updates","systemd-failed-units", "clock", {{- if eq .device "thinkpad"}} "backlight", "battery", "network", {{- end }} "group/volume", "group/power"],

    "custom/media": {
        "format": "{icon} {text}",
        "return-type": "json",
        //"max-length": 50,
        "format-icons": {
            "spotify": "ÔÜº",
            "vlc": "Û∞ïº",
            "mpv": "ÔçÆ",
            "default": "üéú"
        },
        "escape": true,
        "hide-empty-text": true,
        "on-click": "playerctl --player=spotify play-pause",
        //"exec": "$HOME/.config/waybar/mediaplayer.py > /dev/null" // Script in resources folder
        "exec": "/usr/bin/python3 $HOME/.config/waybar/scripts/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    },

    "custom/updates": {
        "exec": "$HOME/.config/waybar/scripts/updates",
        "return-type": "json",
        "interval": 3600,
        "on-click": "kitty sh -c 'sudo pacman -Syu'"
    },

    "custom/headsetVolume": {
        "format": "{text}",
        "return-type": "json",
        "exec": "/usr/bin/python3 $HOME/.config/waybar/scripts/battery.py"

    },

    "systemd-failed-units": {
        "hide-on-ok": false, // Do not hide if there is zero failed units.
        "format": "Ôëß {nr_failed}",
        "format-ok": "ÔÄå",
        "system": true, // Monitor failed systemwide units.
        "user": false // Ignore failed user units.
    },

    "cava": {
        "framerate": 120,
        "autosens": 1,
        "bars": 12,
        "method": "pipewire",
        "source": "auto",
        "bar_delimiter": 0,
        "input_delay": 2,
        "sleep_timer": 2,
        "hide_on_silence": true,
        "format-icons" : ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà" ]
    },

    "group/volume": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
        },
        "modules": [
            "pulseaudio",
            "pulseaudio/slider"
        ]
    },

    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal"
    },

    "group/power": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 500,
            "children-class": "not-power",
            "transition-left-to-right": false,
        },
        "modules": [
            "custom/power",
            "custom/logout",
            "custom/reboot",
            {{- if eq .device "home-pc" }}
            "custom/windows",
            {{- end }}
            "custom/lock"
        ]
    },

    "custom/logout": {
        "format": "Ó∞ÉÛ∞óº",
        "tooltip": false,
        "on-click": "hyprctl dispactch exit"
    },

    "custom/reboot": {
        "format": "ÔÄ°",
        "tooltip": false,
        "on-click": "systemctl reboot"
    },

    "custom/lock": {
        "format": "ÔÄ£",
        "tooltip": false,
        "on-click": "hyprlock --immediate"
    },

    "custom/power": {
        "format":"Û∞§Ü",
        "on-click": "wlogout -b 4",
        "tooltip": false
    },
        
    {{- if eq .device "home-pc" }}
    "custom/windows": {
        "format":"Óò™",
        "on-click": "kitty ~/.config/waybar/scripts/set_windows.sh",
        "tooltip": false
    },

    {{- end }}

    "hyprland/workspaces": {
        "format": "{icon}",
        "on-click": "activate",
        "format-icons": {
            "active": "<span color='#ca9ee6'>ÓÆ¥</span>",
            "default": "<span color='#eebebe'>ÓÆ¥</span>",
            "urgent": "<span color='#e78284'>ÓÆ¥</span>"
        },
        "persistent-workspaces": {
            "*": 10
        }
    },

    "hyprland/window": {
        "format": "{initialTitle}",
        "rewrite": {
            "(.*) ‚Äî Zen Browser": "Ó¨Å $1",
            "(.*) - kitty": "> [$1]"
        },
        "separate-outputs": true,
        "tooltip": true,
        "tooltip-format": "{title}"
    },


    "custom/arch": {
        "format": "<span size='large' color='#179299'>Û∞£á</span>",
        "on-click": "waypaper",
        "tooltip-format": "btw"
    },

    "tray": {
        "icon-size": 21,
        "spacing": 7,
        "show-passive-items": true
    },
    "pulseaudio": {
        "format": "{icon}",
        "tooltip-format": "{volume}%",
        "format-muted": "Óª®",
        "format-icons": {
            "default": ["ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol",
        "on-click-right": "pactl -- set-sink-volume 0 100%"
    },

    "clock": {
        "format": "<span color='#b4befe'>ÔÄó  </span>{:%H:%M}",
        "tooltip": true,
        "tooltip-format": "{:%d/%m/%Y}",
        "on-click":"gnome-calendar"
    },

    "backlight": {
    "device": "intel_backlight",
    "format": "{percent}% {icon}",
    "format-icons": ["ÔÜÖ", "ÔÑë"]
    },
    
    "battery": {
    "interval": 10,
    "states": {
        "warning": 30,
        "critical": 15
    },
    "format": "{capacity}% {icon}",
    "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
    "max-length": 25
    },

    "network": {
    "interface": "wlp2s0",
    "format": "{ifname}",
    "format-wifi": "Ôá´ ",
    "format-ethernet": "{ipaddr}/{cidr} Û∞äó",
    "format-disconnected": "", //An empty format will hide the module.
    "tooltip-format": "{ifname} via {gwaddr} Û∞äó",
    "tooltip-format-wifi": "{essid} ({signalStrength}%) Ôá´",
    "tooltip-format-ethernet": "{ifname} ÔÉÅ",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    "on-click": "kitty nmtui"
    }

}
