{
    "apps": [
        {
            "image-path": "desktop.png",
            "name": "Desktop"
        },
        {
            "auto-detach": true,
            "detached": [
                "setsid steam steam://open/bigpicture"
            ],
            "exclude-global-prep-cmd": false,
            "exit-timeout": 5,
            "image-path": "steam.png",
            "name": "Steam Big Picture",
            "prep-cmd": [
                {
                    "do": "/home/malenia/.config/sunshine/scripts/steam-deck-toggle.sh enable",
                    "undo": "setsid steam steam://close/bigpicture"
                },
                {
                    "do": "",
                    "undo": "/home/malenia/.config/sunshine/scripts/steam-deck-toggle.sh disable"
                }
            ],
            "wait-all": true
        }
    ],
    "env": {
        "PATH": "$(PATH):$(HOME)/.local/bin"
    }
}
